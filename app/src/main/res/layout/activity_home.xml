<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.raoul.walkfoframe.HomeActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The OFFICIAL Hollywood Walk of Fame Guide App"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#ff070505"
        android:textStyle="bold" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Find  Star"
        android:id="@+id/findstar_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Explore the Walk"
        android:id="@+id/explore_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Create Your Star"
        android:id="@+id/createstar_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Trivia Quiz"
        android:id="@+id/trivia_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Coupons"
        android:id="@+id/coupons_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_button"
        android:layout_gravity="center_horizontal|right" />
</LinearLayout>
